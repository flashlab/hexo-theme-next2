.livePhotoContainer {
  // 必须在代码里面计算并设置在 inline style 上。
  // width: 252px;
  // height: 336px;
  // 允许子元素为 absolute
  position: relative;
  // 允许缩放
  overflow: hidden;

  // 子元素容器查询。
  container-type: inline-size;

  margin-left: auto;
  margin-right: auto;
  max-height: 700px;

  video {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index -99;
    transition: transform .5s ease;
    // 如果被外界容器强制限制了比例，可能出现拉升，修复它。
    // 正常情况下，有 aspect-ratio，将不影响。
    // TODO 可能与下面 video fill 有冲突？
    // 不管是否和图片大小有多不一致，始终保持一致
    // 这种场景应该很少，优先使用上面的 cover。
    // object-fit: fill;
    object-fit: cover;
  }

  img {
    opacity: 1;
    transition: opacity .5s ease, transform .5s ease!important;
  }

  &.zoom {
    img, video {
      transform: scale(1.1);
    }
    img {
      opacity: 0;
    }
  }

  .icon {
    display: inline-flex;
    align-items: center;
    padding: 2px;
    border-radius: $note-border-radius;
    position: absolute;
    left: 10px;
    top: 10px;
    height: 22px;
    background-color: var(--card-bg-transcolor);
    cursor: pointer;
    user-select: none;
    svg {
      stroke-width: 2;
      stroke-linejoin: round;
      circle {
        will-change: auto;
        transition: stroke-dashoffset 300ms ease-in-out;
      }
    }
    span {
      padding: 0 3px;
      line-height: 1;
    }
    .msg {
      background: orange;
      font-size: .8em;
      padding: 3px 3px 1px 3px;
      border-radius: 7px;
      color: white;
      transition: opacity .5s linear;
      opacity: 0;
      &.show {
        opacity: 1 !important;
      }
    }
  }

  // 如果显示大小比较小，隐藏文字 LIVE。
  @container (max-width: 200px) {
    .icon span {
      display: none;
    }
  }
}
