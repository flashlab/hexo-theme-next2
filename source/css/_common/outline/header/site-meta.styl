.site-meta {
  flex-grow: 1;
  text-align: center;

  +mobile() {
    text-align: center;
  }
}

if ($scheme != 'Mist') {
  .custom-logo-image {
    margin-top: 20px;

    +tablet-mobile() {
      display: none;
    }
  }
}

.brand {
  color: var(--brand-color);
  display: inline-block;
  padding: $brand-padding;

  &:hover {
    color: var(--brand-hover-color);
  }
}

.site-title
  if $font-family-logo is defined
    font-family: $font-family-logo;
  font-size: $font-size-title;
  line-height: 1.5;
  margin: 0;

.site-subtitle {
  color: $subtitle-color;
  font-size: $font-size-subtitle;
  margin: $site-subtitle-margin;
}

.use-motion {
  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
