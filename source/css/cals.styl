/* cal-container */
.cal-container {
    display: block;
    margin: 0 auto;
    text-align: center;
    font-family: Galdeano, "PingFang SC", "Microsoft YaHei", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
    overflow-x: auto;
    direction: rtl;
}
.cal-container > svg {
  width: 715px;
  height: 115px;
}
.cal-container rect {
  fill: #21262d;
  filter: invert(100%);
}
.darkmode .cal-container rect {
  fill: #2e3237;
  filter: initial;
}
.cal-container rect:hover {
  stroke: #444;
}
.cal-container rect[data-level="1"] {
  fill: #0e4429;
}
.cal-container rect[data-level="2"] {
  fill: #006d32;
}
.cal-container rect[data-level="3"] {
  fill: #26a641;
}
.cal-container rect[data-level="4"] {
  fill: #39d353;
}
.cal-container .monthname {
  font-size: 10px;
  fill: #aaa;
  text-anchor: end;
}
.cal-container .daylabel {
  fill: #aaa;
  font-size: 10px;
  text-anchor: middle;
}

/* art-list */
@media screen and (max-width: 1000px) {
  .work {
    width: 100%!important;
    padding: 0!important;
  }
}

