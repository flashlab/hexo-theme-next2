.art-list:after {
  content: '';
  display: block;
  width: 100%;
  clear: both;
}

.work {
  width: 50%;
  height: 150px;
  float: left;
  margin-bottom: 1em;
  box-sizing: border-box;
  overflow: hidden;
}

.work:nth-Child(2n){
  padding-left: 8px;
}

.work:nth-Child(2n-1){
    padding-right: 8px;
}

